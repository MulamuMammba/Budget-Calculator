<Window x:Class="POE.Savings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POE"
        mc:Ignorable="d"
        Title="Savings" Height="500" Width="800">

    <Grid>
        <Canvas Background="#FF373737">
            <Label Content="SAVING APPLICATION" Foreground="White"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="230" Height="32" FontWeight="Bold" FontFamily="Arial Black" FontSize="16" Canvas.Left="285" Canvas.Top="25"/>
            <Label Content="Principle amount" Foreground="White" HorizontalAlignment="Left" Margin="92,85,0,0" VerticalAlignment="Top" Width="209" Height="33" FontWeight="Bold" FontSize="14"/>
            <Label Content="Reason" Foreground="White" HorizontalAlignment="Left" Margin="92,137,0,0" VerticalAlignment="Top" Width="209" Height="31" FontSize="14" FontWeight="Bold"/>
            <Label Content="Duration" Foreground="White" HorizontalAlignment="Left" Margin="92,197,0,0" VerticalAlignment="Top" Width="139" FontSize="14" FontWeight="Bold"/>
            <RadioButton  x:Name="rd1" Foreground="White" Content="5% " HorizontalAlignment="Left" Margin="90,287,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
            <RadioButton  x:Name="rd2" Foreground="White" Content="10%" HorizontalAlignment="Left" Margin="92,323,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
            <RadioButton  x:Name="rd3" Foreground="White" Content="15% " HorizontalAlignment="Left" Margin="90,358,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" RenderTransformOrigin="0.518,-0.707"/>
            <TextBox x:Name="tx1" Background="White" Foreground="White" HorizontalAlignment="Left" Margin="382,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="25"/>
            <TextBox x:Name="tx2" Background="White" Foreground="White" HorizontalAlignment="Left" Margin="382,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="50"/>
            <TextBox x:Name="tx3" Background="White" Foreground="White" HorizontalAlignment="Left" Margin="383,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="25"/>
            <Button Content="Submit" Background="Black" Foreground="WhiteSmoke" HorizontalAlignment="Left" Margin="59,419,0,0" VerticalAlignment="Top" Width="333" Height="36" Click="Button_Click" FontSize="20" FontWeight="Bold"/>
            <Label Content="Please select one of the following interest rate" Foreground="White" HorizontalAlignment="Left" Margin="92,242,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.855,1.234" Width="333" FontWeight="Normal" FontSize="14"/>
            <Button Content="Cancel" Background="Black" Foreground="WhiteSmoke" HorizontalAlignment="Left" Margin="457,419,0,0" VerticalAlignment="Top" Width="333" Height="36" FontWeight="Bold" FontSize="20" Click="Button_Click_Cancel"/>
        </Canvas>

    </Grid>
</Window>
